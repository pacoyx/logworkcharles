<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Articulo[0].Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Articulo[0].FechaRegistro)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Articulo[0].Categoria)
            </th>
            <th>
